@import 'variables'

body
  font: 400 1rem/1.56 'Montserrat';
  color: color-primary;

h1, h2, h3, h4, h5, h6
  color: color-primary;
  font-family: 'Montserrat';

h1
  font-size: 30px;

  @media breakpoint-medium
    font-size: 40px;

button, .button
  background-color: color-primary;
  color: color-secondary;
  font-family: 'Montserrat';
  font-weight: 700;

  &:hover
    background-color: color-primary;
    color: #fff

.small-12
  padding-left: 10px;
  padding-right: 10px;
