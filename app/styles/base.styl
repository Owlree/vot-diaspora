@import 'variables'

body
  font: 400 1rem/1.56 'Montserrat';
  color: color-primary;

h1, h2, h3, h4, h5, h6
  color: color-primary;
  font-family: 'Montserrat';
  line-height 1.17

h1
  font-size: 30px;
  margin-bottom: (distance/2);

  @media breakpoint-medium
    font-size: 40px;

a
  color color-primary

  &:hover
    color color-primary
    text-decoration underline

p
  a
    text-decoration underline

button, .button
  background-color: color-primary;
  color: color-secondary;
  font-family: 'Montserrat';
  font-weight: 700;

  &:hover
    background-color: color-primary;
    color: #fff
    text-decoration none

.field-input
  position: relative;

  a
    display: block;
    padding (distance/2) (distance/3)

  input[type="radio"]
    margin: 0;
    position: relative;
    top: -4px;

    &:checked
      + label
      .chosen
        opacity 1
        color color-primary

    + label
      opacity .90
      color: color-primary;
      font-size: 22px;
      margin: 0 16px;

.material-icons
  font-size: 32px;

.row
  .row
    margin 0

[class*="column"] + [class*="column"]:last-child
  float left

.faded
  opacity .90
  color: color-secondary;
  h2
    color: color-secondary;
.chosen
  font-size: 1.2em;
  h2
    color: color-secondary;

input[type="text"]
  padding: 26px 13px;
  margin 0

.fields
  .field-input
    margin: (distance/6) 0;
    width: 50%
    float left

[data-ui-view]
  min-height 600px;
