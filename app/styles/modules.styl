@import 'variables'

.hero-info
  background: color-primary;
  color: color-secondary;
  text-align: center;
  padding: distance 0;
  margin-bottom: (distance/2);

  h1
    color: color-secondary;
    margin-bottom: (distance/2);

  p
    font-size: 18px;

.step-title
  text-align: center;

  span
    color: color-secondary;
    display: block;
    margin: 0 auto;
    width: 30px;
    height: 30px;
    line-height: 30px;
    font-size: 18px;
    border-radius: 50%;
    background: color-primary;
    text-align: center;

    @media breakpoint-medium
      margin-right: 20px;
      display: inline-block;
      width: 40px;
      height: 40px;
      line-height: 38px;
      font-size: 26px;

.location
  form
    @media breakpoint-medium
      width: 300px;

.step-actions
  text-align: center;
  padding: distance 0;

  button, .button
    margin: 0;

.step-content
  .field-input
    margin: (distance/3) 0;

  .fields
    .field-input
      margin: (distance/6) 0;

.listing
  margin: (distance/3) 0 0;
  padding: 0;

  li
    position: relative;
    list-style: inside none;
    margin-bottom: (distance/4);

  .material-icons
    position: absolute;
    top: 4px;
    left: 0;

  p
    padding-left: (distance * 2/3);

.box
  padding: (distance/2);
  box-sizing: border-box;

  .button
    margin: 0;

.box-light
  background: color-secondary

.box-dark
  background: color-primary;
  color: color-secondary;

  h2
    color: color-secondary;

.share-actions
  margin: (distance * 3 /4) 0 0;

  .share-cta
    margin: 0 10px 0 0;

.share-cta
  color: #fff;
  padding: 20px;
  font-size: 20px;
  font-weight 700;
  display inline-block;

  &.fb
    background #3b5998;

  &.tw
    background #1da1f2;

  &.gp
    background: #d73d32;

  &:hover
    background color-secondary
    color #fff
