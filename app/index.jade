  body

    div(data-top-bar)
      ul.title-area
        li.name
          h1
            a(href='#/') Vot Diaspora
        li.menu-icon(data-toggle-top-bar)
          a(href='#/')
            span

      div(data-top-bar-section)
        ul.left
          li(data-ui-sref-active='active')
            a(data-ui-sref='home') Home
          li(data-ui-sref-active='active')
            a(data-ui-sref='test1') Test1
          li(data-ui-sref-active='active')
            a(data-ui-sref='test2') Test2

    div(data-ui-view)

    script( type="text/ng-template" id="marker.html")
      div(class="locationBox")
        h2( ng-if="parameter.m && parameter.co"  ) {{parameter.m}}, {{parameter.co}}
        div(class="box_info")
          p(class="address" ng-if="parameter.adr")
            span(class="label") Adresa:
            {{parameter.adr}}
          p(class="phone_prefix" ng-if="parameter.prefix")
            span(class="label") Prefix:
            {{parameter.prefix}}
          p(class="phone" ng-if="parameter.tel")
            span(class="label") Telefon:
            {{parameter.tel}}
          p(class="fax" ng-if="parameter.fax")
            span(class="label") Fax:
            {{parameter.fax}}
          p(class="email" ng-if="parameter.email")
            span(class="label") Email:
            {{parameter.email}}

